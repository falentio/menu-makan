---
const menus = [
  {
    description: ["Nasi Goreng", "Es Jeruk"],
    price: "15",
    image: "//picsum.photos/seed/f/300",
  },
  {
    description: ["Nasi Goreng", "Kopi Hitam"],
    price: "20",
    image: "//picsum.photos/seed/f/300",
  },
  {
    description: ["Nasi Goreng Jumbo", "Es Jeruk"],
    price: "25",
    image: "//picsum.photos/seed/f/300",
  },
  {
    description: ["Nasi Goreng Mawut", "Kopi Hitam", "Telor Dadar"],
    price: "100",
    image: "//picsum.photos/seed/f/300",
  },
] as const;
---

<div class="bg-red-6 text-yellow flex flex-col items-center justify-center">
  <div class="flex flex-row flex-wrap p-8 gap-8 mx-auto justify-center max-w-5xl">
    {
      menus.map(({ description, price, image }) => (
        <section class="grid grid-cols-12 grid-rows-1 max-w-sm h-full w-full gap-4 [&>*]:(min-h-24) sm:[&>*]:(min-h-32)">
          <div class="flex flex-col justify-between col-span-8 row-span-1">
            <div class="flex flex-row gap-4 items-center font-alfa">
              <span class="flag bg-yellow text-red-6 rounded-sm px-2 text-xl">FAM</span>
              <h1 class="text-xl sm:text-3xl">Rp. {price}rb</h1>
            </div>
            <p class="text-white <sm:text-sm flex flex-col justify-end flex-auto break-normal">
              {description.map((i) => (
                <span>{i}</span>
              ))}
            </p>
          </div>
          <div class="overflow-hidden aspect-square rounded-lg row-span-3 col-span-4">
            <img
              src={image}
              class="object-cover"
              loading="lazy"
              onclick="
              event.preventDefault()
              "
            />
          </div>
        </section>
      ))
    }
  </div>
</div>
