---
import Recommendation from "./Recommendation.astro";
---

<div class="max-w-2xl mx-auto w-full p-6 flex flex-col gap-2">
  <div class="rounded-lg overflow-hidden mx-auto flex">
    <img src="//picsum.photos/seed/ice-cream-jumbo/500" width="500" class="object-cover w-full" />
  </div>
  <div class="flex flex-row flex-wrap gap-4 pb-4 justify-center">
    <div class="w-72 justify-between max-w-full flex flex-row gap-2 items-center">
      <span class="text-red-7 text-2xl">Ice Cream Jumbo</span>
      <span class="bg-red-6 text-amber rounded-md px-2 py-1 text-lg">20rb</span>
    </div>
    <div class="w-72 justify-between max-w-full flex flex-row gap-2 items-center">
      <span class="text-red-7 text-2xl">Ice Cream Jumbo Spesial</span>
      <span class="bg-red-6 text-amber rounded-md px-2 py-1 text-lg">40rb</span>
    </div>
  </div>
  <div class="flex flex-col gap-2 mx-auto w-full">
    <Recommendation />
  </div>
</div>
